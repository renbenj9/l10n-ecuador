<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- l10n_ec.sri.tax.support tree view -->
    <record id="view_l10n_ec_sri_tax_support_tree" model="ir.ui.view">
        <field name="name">l10n_ec.sri.tax.support.view.tree</field>
        <field name="model">l10n_ec.sri.tax.support</field>
        <field name="arch" type="xml">
            <tree string="Tax Support SRI" editable="bottom">
                <field name="code" />
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_l10n_ec_sri_tax_support">
        <field name="name">SRI Tax Support</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_ec.sri.tax.support</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_l10n_ec_sri_tax_support_tree"/>
    </record>

    <menuitem id="menu_l10n_ec_sri_tax_support"
              name="SRI Tax Support"
              parent="account.account_invoicing_menu"
              action="action_l10n_ec_sri_tax_support"
              sequence="4" />

</odoo>
