<?xml version="1.0" encoding="UTF-8" ?>
<odoo noupdate="1">
    <!-- tarea para descargar/crear xml electronicos -->
    <record forcecreate="True" id="ir_cron_xml_offline" model="ir.cron">
        <field name="name">Descargar/Crear xml electronicos</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False" />
        <field
            name="nextcall"
            eval="(datetime.now() + relativedelta(days=1, hour=13, minute=0, second=0)).strftime('%Y-%m-%d %H:%M:%S')"
        />
        <field
            name="model_id"
            ref="l10n_ec_import_electronic_documents.model_l10n_ec_electronic_document_imported"
        />
        <field name="state">code</field>
        <field name="code">model.action_cron_download_file()</field>
    </record>
</odoo>
